<?xml version="1.0" encoding="UTF-8" ?>
<conf>
    <!-- ホームディレクトリ -->
    <home-dir>c:/stat</home-dir>

    <!-- スクリプトのディレクトリ -->
    <script-dir>script</script-dir>

    <!-- ログのディレクトリ -->
    <log-dir>log</log-dir>

    <!-- 編集するログの種類 -->
    <edit-logs>
        <cpu script="cpu_edit.pl"
             target="cpu/original/cpu_*.log"
             to="cpu/edit" />
        <memory script="memory_edit.pl"
                target="memory/original/memory_*.log"
                to="memory/edit" />
    </edit-logs>
</conf>
